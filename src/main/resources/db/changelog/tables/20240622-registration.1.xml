<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.10.xsd">

    <changeSet id="registration" author="deadringer">
        <createTable tableName="registration">
            <column name="id" type="uuid" autoIncrement="false">
                <constraints primaryKey="true" primaryKeyName="pk_user_id"/>
            </column>
            <column name="login" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="email" type="varchar">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="middle_name" type="varchar">
                <constraints nullable="true"/>
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>